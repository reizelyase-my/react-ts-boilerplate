{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "baseUrl": "./src",
        "paths": {
            "@utils/*": ["utils/*"],
            "@components/*": ["components/*"],
            "@layouts/*": ["layouts/*"],
            "@containers/*": ["containers/*"],
            "@types/*": ["types/*"],
            "@actions/*": ["actions/*"]
        },
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*",
        "./typings/*"
    ],
    "exclude": [
        "node_modules"
    ]
}